                                    <td>@i.TestResult</td>
                                    <td>@i.ResultUnit</td>
                                    <td>@i.RefRange</td>
                                    <td>@i.Flag</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-light">Details</button>
                                    </td>
