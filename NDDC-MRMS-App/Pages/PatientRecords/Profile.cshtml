<!--Tab Panes-->
<div class="tab-content  text-muted">
    <div class="tab-pane active show" id="profile" role="tabpanel">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Info</h5>
                        <div class="table-responsive">
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    <tr>
                                        <th class="ps-0" scope="row">First Name :</th>
                                        <td class="text-muted">@Model.Employee.FirstName</td>
                                        <th class="ps-0" scope="row">Last Name :</th>
                                        <td class="text-muted">@Model.Employee.LastName</td>
                                        <th class="ps-0" scope="row">Other Name(s) :</th>
                                        <td class="text-muted">@Model.Employee.OtherNames</td>
                                    </tr>
                                    <tr>
                                        <th class="ps-0" scope="row">Gender :</th>
                                        <td class="text-muted">@Model.Employee.Gender</td>
                                        <th class="ps-0" scope="row">Marital Status :</th>
                                        <td class="text-muted">@Model.Employee.MaritalStatus</td>
                                        <th class="ps-0" scope="row">Age :</th>
                                        <td class="text-muted">@Model.Age</td>
                                    </tr>
                                    <tr>
                                        <th class="ps-0" scope="row">Address :</th>
                                        <td class="text-muted">@Model.Employee.Address</td>
                                        <th class="ps-0" scope="row">Phone :</th>
                                        <td class="text-muted">@Model.Employee.Phone</td>
                                        <th class="ps-0" scope="row">Email :</th>
                                        <td class="text-muted">@Model.Employee.Email</td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div><!-- end card body -->
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="medBio" role="tabpanel">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <span class="float-end"></span>
                           <h4 class="card-title mb-0 flex-grow-1">Medical Bio</h4>
                       </div>
                       <div class="card-body">
                           <div class="table-responsive table-card">
                               <table class="table table-nowrap table-striped-columns mb-0">
                                   <thead class="table-light">
                                        <tr>
                                            
                                            <th scope="col">S/N</th>
                                            <th scope="col">Height</th>
                                            <th scope="col">Blood Group</th>
                                            <th scope="col">Genotype</th>
                                            <th scope="col">Weight</th>
                                            <th scope="col">BMI</th>
                                            <th scope="col">Disabilities</th>
                                            <th scope="col">Added By</th>
                                            <th scope="col">Date Added</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                   <tbody>
                                       @foreach (var item in Model.MedicalBio)
                                       {
                                           <tr>
                                            
                                            <td>@item.SrNo</td>
                                            <td>@item.Height</td>
                                            <td>@item.BloodGroup</td>
                                            <td>@item.Genotype</td>
                                            <td>@item.Weight</td>
                                            <td>@item.BMI</td>
                                            <td>@item.Disabilities</td>
                                            <td>@item.AddedBy</td>
                                            <td>@item.DateAdded</td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-light">Edit</button>
                                            </td>
                                        </tr>
                                       }
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <div class="tab-pane" id="vitals" role="tabpanel">
       <div class="card">
           <div class="card-header">
               <span class="float-end">
                   </span>
                   <h6 class="card-title mb-0">Vitals History</h6>
               </div>
               <div class="card-body">
                   <div class="table-responsive table-card">
                       <table class="table table-nowrap table-striped-columns mb-0">
                           <thead class="table-light">
                               <tr>
                                  
                                    <th scope="col">S/N</th>
                                    <th scope="col">Temperature</th>
                                    <th scope="col">Pulse</th>
                                <th scope="col">SPo2</th>
                                <th scope="col">BP</th>
                                <th scope="col">Date</th>
                                    <th scope="col">Action</th></tr></thead>
                            <tbody>
                            @foreach (var item in Model.Vitals)
                            {
                                <tr>
                                    <td>
                                        @item.SrNo
                                    </td>

                                    <td>@item.Temp</td>
                                    <td>@item.Pulse</td>
                                    <td>@item.Oxygen</td>
                                    <td>@item.Systolic/@item.Diastolic</td>
                                    <td>@item.DateAdded</td>
                                    <td><button type="button" class="btn btn-sm btn-light">Edit</button></td>
                                </tr>
                            }
                                
                                
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="investigations" role="tabpanel">
        <div class="card">
            <div class="card-header">
                <span class="float-end">
                    </span>
                    <h6 class="card-title mb-0">Investigations History</h6>
