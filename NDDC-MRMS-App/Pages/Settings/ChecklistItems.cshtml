@page "{Id:int?}"
@model NDDC_MRMS_App.Pages.Settings.ChecklistItemsModel
@{
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Checklist Items</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/Settings/Checklist">Checklist</a></li>
                    <li class="breadcrumb-item active">Medical Examination Types</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">@Model.ExamCategory Examination Types</h4>
                <div class="flex-shrink-0">
                    <div class="form-check form-switch form-switch-right form-switch-md">
                        <a class="btn btn-primary" asp-page="AddExamination" asp-route-Id="@Model.MyId" >Add Examination Type</a>
                    </div>
                </div>
            </div><!-- end card header -->

            <div class="card-body">

                <div class="live-preview">
                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">S/N</th>
                                    <th scope="col">Examination Type</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ExamTypes)
                                {
                                    <tr>
                                        <th scope="row"><a href="#" class="fw-medium">@item.SrNo</a></th>
                                        <td>@item.ExaminationType</td>

                                    </tr>
                                }
                               
                            </tbody>
                        </table>
                    </div>
                </div>


            </div><!-- end card-body -->
        </div><!-- end card -->
    </div>
</div>